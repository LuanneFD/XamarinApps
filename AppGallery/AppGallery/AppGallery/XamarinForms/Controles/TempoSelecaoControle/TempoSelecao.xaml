<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.TempoSelecaoControle.TempoSelecao" Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Time, Format"/>
            <TimePicker Time="14:15" Format="HH:mm"></TimePicker>

            <Label Text="Evento: PropertyChanged"/>
            <TimePicker PropertyChanged="TimePicker_PropertyChanged" Time="14:15" Format="HH:mm"></TimePicker>
            <Label x:Name="lblinfo"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>