<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.InterruptorControle.Interruptor" Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsToggled"/>
            <Switch HorizontalOptions="Start" IsToggled="True"></Switch>

            <Label Text="OnColor,ThumbColor"/>
            <Switch HorizontalOptions="Start" IsToggled="True" OnColor="ForestGreen" ThumbColor="GreenYellow"></Switch>

            <Label Text="Evento:Toggled"/>
            <Switch HorizontalOptions="Start" Toggled="Switch_Toggled"></Switch>
            <Label x:Name="lblInformativo"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>