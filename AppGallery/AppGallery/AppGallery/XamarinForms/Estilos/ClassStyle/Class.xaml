<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.ClassStyle.Class">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" Class="arrendondar">
                <Setter Property="CornerRadius" Value="30"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
            <Style TargetType="Button" Class="corsucess">
                <Setter Property="BackgroundColor" Value="#27AE60"/>
            </Style>
            <Style TargetType="Button" Class="corwarning">
                <Setter Property="BackgroundColor" Value="#E7AC3C"/>
            </Style>
            <Style TargetType="Button" Class="cortexto">
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ClassStyle" FontSize="14" FontAttributes="Bold" TextColor="Black"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Class Style" StyleClass="arrendondar,corsucess,cortexto"/>
            <Button Text="Class Style" StyleClass="arrendondar,corwarning,cortexto"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>