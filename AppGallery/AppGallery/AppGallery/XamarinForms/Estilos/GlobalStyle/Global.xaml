<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.GlobalStyle.Global">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Global Style" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   TextColor="Black"
                   VerticalOptions="Start" 
                   HorizontalOptions="CenterAndExpand" />

            <!--O style é feito no arquivo App.xaml-->
            <Button Text="Botão 01" Style="{StaticResource EstiloGlobalBotao}"/>
            <Button Text="Botão 02"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>