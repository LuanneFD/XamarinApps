<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Estilos.MaterialDesign.Material"
             Visual="Material">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Material Design"
                VerticalOptions="Start" FontSize="14" 
                HorizontalOptions="CenterAndExpand" />
                <Frame Margin="10">
                    <StackLayout>
                        <Button Text="Botão"/>
                        <CheckBox/>
                        <RadioButton/>
                        <Entry Placeholder="entry"/>
                        <Editor Placeholder="editor"/>
                        <DatePicker/>
                        <TimePicker/>
                        <Picker Title="Picker"/>
                        <ActivityIndicator IsRunning="True"/>
                        <Stepper/>
                        <ProgressBar Progress="0.5"/>
                        <Slider Maximum="5" Minimum="0" Value="3"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
<!--Necessário instalar o pacote material design e depois configurar o arquivo Main activity de cada SO-->