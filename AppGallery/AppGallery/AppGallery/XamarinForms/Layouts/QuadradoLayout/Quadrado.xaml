<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Layouts.QuadradoLayout.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="40">
            <Frame HorizontalOptions="Center" CornerRadius="100" Padding="0" IsClippedToBounds="True" BorderColor="Black">
                <BoxView Color="Green" WidthRequest="150" HeightRequest="150"></BoxView>
            </Frame>
            <Frame Padding="0">
                <StackLayout>
                    <Label Text="Steven Spielberg" TextColor="Black" FontSize="20" HorizontalOptions="Center" Margin="20,20,10,10"/>
                    <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand"/>
                    <Label Text="Cineasta, produtor cinematográfico, roteirista e empresário norte-americano"
                           Margin="20"/>
                </StackLayout>
            </Frame>
            <Frame HasShadow="True" CornerRadius="25" BorderColor="MediumSpringGreen">
                <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>