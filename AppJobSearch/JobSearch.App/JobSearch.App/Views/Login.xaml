<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobSearch.App.Views.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="JobSearch" Style="{StaticResource Title}"/>
            <BoxView BackgroundColor="#D7CCFF" HeightRequest="1"/>

            <StackLayout VerticalOptions="CenterAndExpand">
                <Frame StyleClass="EntryFrame">
                    <Entry x:Name="txtEmail" ReturnType="Next" Placeholder="E-mail"/>
                </Frame>
                <Frame StyleClass="EntryFrame">
                    <Entry x:Name="txtPassword" ReturnType="Done" IsPassword="True" Placeholder="Senha"/>
                </Frame>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Acessar" Clicked="GoStart" HorizontalOptions="FillAndExpand"/>
                    <Button Text="Cadastrar" Clicked="GoRegister" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>